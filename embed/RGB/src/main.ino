void loop() {
  static uint8_t init = false;
  static uint8_t hue[NUM_LEDS] = {0};

  if(!init) {
    for(int i = 1; i < NUM_LEDS; i++) {
      hue[i] = hue[i-1] + 2;
    }

    init = true;
  }

  while(1) {
    for(int i = 0; i < NUM_LEDS; i++) {
      leds[i] = CHSV(hue[0], 255, 255);
    }
    FastLED.show();
    hue[0]++;

    delay(10);
  }
}
